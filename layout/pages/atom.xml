{{ $author := .Config.Author }}
{{ $baseURL := .Config.BaseURL }}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-US">
	<title>{{ .Config.TitleOrDefault }}</title>
	<id>tag:{{ $baseURL }},{{ now | year}}:/</id>
	<updated>{{ now_utc | rfc3339 }}</updated>
	<link rel="self" type="application/atom+xml" href="https://{{ $baseURL }}/feed.atom"/>
	<link rel="alternate" type="text/html" href="https://{{ $baseURL }}"/>
	{{ range $index, $post := .Posts }}
	<entry>
		<title>{{ $post.TitleOrDefault }}</title>
		<content type="html"><img src="https://{{ $baseURL}}/{{ $post.ImageSourceMedium }}" /></content>
		<published>{{ $post.Meta.Posted | in_utc | rfc3339 }}</published>
		<updated>{{ $post.Meta.Posted | in_utc | rfc3339 }}</updated>
		<link href="https://{{ $baseURL }}/{{ $post.SlugIndex }}"/>
		<id>tag:{{ $baseURL }},{{ $post.Meta.Posted | in_utc | time_format "2006-01-02" }}:/{{ $post.Slug }}</id>
		<author>
			<name>{{ $author }}</name>
			<uri>https://{{ $baseURL }}</uri>
		</author>
	</entry>
	{{ end }}
</feed>